<!-- Lightbox Modal -->
<div id="lightboxModal" class="fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center z-50 hidden transition-opacity duration-300">
  <div class="relative max-w-3xl w-full p-4">
    <button onclick="closeLightbox()" class="absolute top-4 right-4 text-white text-3xl font-bold">&times;</button>
    <div class="text-white text-center mb-2" id="imageCounter"></div>
    <div class="relative">
      <img id="lightboxImage" src="" alt="" class="w-full max-h-[80vh] object-contain rounded-xl transition duration-500 ease-in-out opacity-0 cursor-pointer" />
      <button onclick="prevImage()" class="absolute top-1/2 left-0 px-3 py-2 text-white text-xl transform -translate-y-1/2 bg-black bg-opacity-20 hover:bg-opacity-40">⟵</button>
      <button onclick="nextImage()" class="absolute top-1/2 right-0 px-3 py-2 text-white text-xl transform -translate-y-1/2 bg-black bg-opacity-20 hover:bg-opacity-40">⟶</button>
    </div>
    <p id="lightboxCaption" class="text-center text-white mt-4 text-lg"></p>
    <div class="flex justify-center mt-4 space-x-2">
      <span class="w-2 h-2 bg-white rounded-full" v-for="i in images.length"></span>
    </div>
  </div>
</div>

<script>
  const images = [
    { src: "/images/gallery1.jpg", caption: "Kids playing in the courtyard" },
    { src: "/images/gallery2.jpg", caption: "Art class in progress" },
    { src: "/images/gallery3.jpg", caption: "Midday meal being served" },
    { src: "/images/gallery4.jpg", caption: "Volunteers teaching students" },
    { src: "/images/gallery5.jpg", caption: "Children laughing together" },
    { src: "/images/gallery6.jpg", caption: "A festival celebration at school" },
  ];

  let currentIndex = 0;
  let startX = null;

  function openLightbox(index) {
    currentIndex = index;
    updateLightbox();
    document.getElementById('lightboxModal').classList.remove('hidden');
  }

  function closeLightbox() {
    document.getElementById('lightboxModal').classList.add('hidden');
  }

  function nextImage() {
    currentIndex = (currentIndex + 1) % images.length;
    updateLightbox(true);
  }

  function prevImage() {
    currentIndex = (currentIndex - 1 + images.length) % images.length;
    updateLightbox(true);
  }

  function updateLightbox(animate = false) {
    const imageEl = document.getElementById('lightboxImage');
    const image = images[currentIndex];
    if (animate) {
      imageEl.classList.remove('opacity-100');
      imageEl.classList.add('opacity-0');
      setTimeout(() => {
        imageEl.src = image.src;
        imageEl.alt = image.caption;
        document.getElementById('lightboxCaption').innerText = image.caption;
        document.getElementById('imageCounter').innerText = `${currentIndex + 1} of ${images.length}`;
        imageEl.onload = () => {
          imageEl.classList.remove('opacity-0');
          imageEl.classList.add('opacity-100');
        };
      }, 150);
    } else {
      imageEl.src = image.src;
      imageEl.alt = image.caption;
      document.getElementById('lightboxCaption').innerText = image.caption;
      document.getElementById('imageCounter').innerText = `${currentIndex + 1} of ${images.length}`;
      imageEl.classList.add('opacity-100');
    }
  }

  document.getElementById('lightboxImage').addEventListener('click', nextImage);

  document.addEventListener('keydown', function(event) {
    const modal = document.getElementById('lightboxModal');
    if (!modal.classList.contains('hidden')) {
      if (event.key === 'ArrowRight') nextImage();
      if (event.key === 'ArrowLeft') prevImage();
      if (event.key === 'Escape') closeLightbox();
    }
  });

  // Touch swipe support
  const modal = document.getElementById('lightboxModal');
  modal.addEventListener('touchstart', (e) => startX = e.touches[0].clientX);
  modal.addEventListener('touchend', (e) => {
    if (startX === null) return;
    const endX = e.changedTouches[0].clientX;
    if (startX - endX > 50) nextImage();
    else if (endX - startX > 50) prevImage();
    startX = null;
  });
</script>

</body>
</html>

